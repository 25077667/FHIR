<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<baseDirectory>fhir-server-dist</baseDirectory>
	<includeBaseDirectory>true</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/resources/install</directory>
			<outputDirectory>fhir/server</outputDirectory>
			<directoryMode>0775</directoryMode>
			<fileMode>0755</fileMode>
		</fileSet>
        <fileSet>
            <directory>src/main/resources/ifixes</directory>
            <outputDirectory>ifixes</outputDirectory>
            <directoryMode>0775</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/java</directory>
            <outputDirectory>java</outputDirectory>
            <directoryMode>0775</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
		<fileSet>
			<directory>../fhir-server/liberty-config</directory>
			<outputDirectory>fhir/server/usr/servers/fhir-server</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
        <fileSet>
            <directory>../fhir-schemaddl/scripts</directory>
            <outputDirectory>fhir/server/fhir/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../fhir-schemaddl/src/main/resources/liquibase</directory>
            <outputDirectory>fhir/server/fhir/bin/schemaddl</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../fhir-parent/src/main/resources/repo/db2</directory>
            <outputDirectory>fhir/server/fhir/bin/schemaddl/lib</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/docs</directory>
            <outputDirectory>fhir/server/fhir/docs</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../fhir-parent/src/main/resources/repo/db2</directory>
            <outputDirectory>fhir/server/usr/shared/resources/lib/db2</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
	</fileSets>
	<files>
        <file>
            <source>src/main/resources/install.sh</source>
            <outputDirectory></outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>src/main/resources/install.bat</source>
            <outputDirectory></outputDirectory>
            <fileMode>0755</fileMode>
        </file>
		<file>
			<source>../fhir-server/target/fhir-server.war</source>
			<outputDirectory>fhir/server/usr/servers/fhir-server/apps</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
        <file>
            <source>../fhir-swagger-ui/target/fhir-swagger-ui.war</source>
            <outputDirectory>fhir/server/usr/servers/fhir-server/apps</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>../fhir-server/src/test/resources/fhirClientTruststore.jks</source>
            <outputDirectory>fhir/client</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>../fhir-server/src/test/resources/fhirClientKeystore.jks</source>
            <outputDirectory>fhir/client</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
	</files>
	<dependencySets>
		<dependencySet>
			<outputDirectory>server-runtime</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
			<includes>
                <include>com.ibm.websphere.appserver.runtime:wlp-javaee7:*</include>
			</includes>
		</dependencySet>
        <dependencySet>
            <outputDirectory>fhir/server/usr/shared/resources/lib/derby</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <includes>
                <include>org.apache.derby:derbyclient:*</include>
                <include>org.apache.derby:derby:*</include>
            </includes>
        </dependencySet>
	</dependencySets>
</assembly>
