<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<baseDirectory>fhir-server-dist</baseDirectory>
	<includeBaseDirectory>true</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>../fhir-server/liberty-config</directory>
			<outputDirectory>fhir/server/usr/servers/fhir-server</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>../fhir-schemaddl/scripts</directory>
			<outputDirectory>fhir/server/fhir/bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>../fhir-schemaddl/src/main/resources/liquibase</directory>
			<outputDirectory>fhir/server/fhir/bin/schemaddl</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/scripts</directory>
			<outputDirectory></outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/main/resources/docs/FHIRServerUsersGuide.pdf</source>
			<outputDirectory>fhir/server/fhir/docs</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>src/main/resources/docs/FHIRServerUsersGuide.html</source>
			<outputDirectory>fhir/server/fhir/docs</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>../fhir-server-webapp/target/fhir-server.war</source>
			<outputDirectory>fhir/server/usr/servers/fhir-server/apps</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
        <file>
            <source>../fhir-audit-trail/target/fhir-audit-trail.war</source>
            <outputDirectory>fhir/server/fhir/apps</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
		<file>
			<source>../fhir-swagger-ui/target/fhir-swagger-ui.war</source>
			<outputDirectory>fhir/server/usr/servers/fhir-server/apps</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>../fhir-server-test/src/test/resources/fhirClientTruststore.jks</source>
			<outputDirectory>fhir/server/fhir/client</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>../fhir-server-test/src/test/resources/fhirClientKeystore.jks</source>
			<outputDirectory>fhir/server/fhir/client</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>../fhir-cli/target/fhir-cli.zip</source>
			<outputDirectory>fhir/server/fhir/client</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>server-runtime</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
			<includes>
				<include>com.ibm.websphere.appserver.runtime:wlp-base-embeddable:*</include>
			</includes>
		</dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <outputDirectory>fhir/server/usr/shared/resources/lib/fhir</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <includes>
                <include>${project.groupId}:fhir-persistence-proxy:*</include>
            </includes>
            <excludes>
                <exclude>javax.ws.rs:javax.ws.rs-api:*</exclude>
            </excludes>
        </dependencySet>
<!--        
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <outputDirectory>fhir/server/usr/servers/fhir-server/userlib</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <includes>
                <include>${project.groupId}:fhir-operation-document:*</include>
                <include>${project.groupId}:fhir-operation-validate:*</include>
            </includes>
        </dependencySet>
 --> 
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <outputDirectory>fhir/server/usr/servers/fhir-server/userlib</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <includes>
                <include>${project.groupId}:fhir-derby-sproc:*</include>
            </includes>
        </dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>fhir/server/usr/shared/resources/lib/derby</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
			<includes>
				<include>org.apache.derby:derbyclient:*</include>
				<include>org.apache.derby:derby:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>fhir/server/usr/shared/resources/lib/db2</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
			<includes>
				<include>com.ibm.db2:db2jcc4:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>fhir/server/fhir/bin/schemaddl/lib</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
			<includes>
				<include>com.ibm.db2:db2jcc4:*</include>
                <include>org.apache.derby:derby:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>java</outputDirectory>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
			<includes>
				<include>com.ibm.java:ibm-java-sdk:*</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
