    <!-- This JNDI entry specifies the schema name to be used by the JPA persistence layer -->
    <!-- Note: this is currently not working due to a bug in eclipselink.
        <jndiEntry value="FHIR1" jndiName="com.ibm.watsonhealth.fhir.Schema"/>
