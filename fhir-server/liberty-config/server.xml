    <library id="db2Lib">
        <fileset dir="${shared.resource.dir}/lib/db2" includes="*.jar"/>
    </library>
    
    <dataSource id="db2DB" jndiName="jdbc/fhirDB2DB">
        <jdbcDriver libraryRef="db2Lib"/>
CODE_REMOVED
    </dataSource>
    
    <dataSource id="db2DBNonJTA" jndiName="jdbc/fhirDB2DBNonJTA" transactional="false">
        <jdbcDriver libraryRef="db2Lib"/>
CODE_REMOVED
    </dataSource>
    -->
  </server>
